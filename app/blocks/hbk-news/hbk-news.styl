.hbk-news
	overflow hidden
	&__list
		// margin-right -64px
		margin-right -16px
		margin-left -16px
		font-size 0
	&__item
		// margin-right 64px
		margin-right 16px
		margin-left 16px
		margin-bottom (127px / 2)
		// width 1000px
		width (1000px / 2)
		min-height (985px / 2)
		display inline-block
		vertical-align top
	&__item_special
		.hbk-news__title
			color #C30016
		.hbk-news__body
			background #e51000 url('../images/general/bottom.png') 100% 100% / 446px  no-repeat
	&__link
		position relative
		display block
		text-decoration none
		overflow hidden
	&__logo
		position absolute
		top 12px
		left 4px
		retinaSprite($hbk_logo_group)
		hide-text()
	&__image
		// height 750px
		height 375px
		img
			@extends .image
	&__body
		margin-top -25px
		margin-left -20px
		margin-right -20px
		background url('../images/general/bottom-second.png') 100% 100% / 446px  no-repeat
		// background-size cover
		object-fit cover
	&__title
		padding-top 10px
		padding-left 49px
		padding-right (82px / 2)
		min-height 55px
		max-height (104px / 2)
		font-size (69px /2)
		font-family $postr
		text-transform uppercase
		background #FFF
		color #032969
		line-height 1
		transform rotate(-6deg)
		text-align left
		white-space nowrap
	&__text
		padding-top 3px
		padding-right (82px / 2)
		padding-bottom 10px
		padding-left 57px
		min-height 33px
		max-height (300px / 2)
		font-size (60px / 2)
		font-family $prEB
		background #000
		color #FFF
		line-height 1
		transform rotate(-6deg)
	&__sign
		margin-top -3px
		padding-right 30px
		font-size (30px / 2)
		font-family $prER
		color #FFF
		text-align right
		text-shadow 0px 1px 2px rgba(0, 0, 0, 0.847175)
