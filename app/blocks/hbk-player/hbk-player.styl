.hbk-player
	position relative
	width (1000px / 2)
	overflow hidden
	&__logo
		position absolute
		top -1px
		left 2px
		retinaSprite($hbk_logo_third_group)
		hide-text
	&__image
		min-height (756px / 2)
		img
			@extends .image
	&__body
		position relative
		z-index 1
		margin-top -56px
		margin-left -16px
		margin-right -16px
		padding-top 30px
		padding-left 30px
		padding-right 30px
		transform rotate(-3deg)
	&__name
		position relative
		margin-left -30px
		margin-right -30px
		padding-left 37px
		padding-bottom 6px
		font-family $prER
		font-size (70px / 2)
		line-height 1
		color #FFF
		background #0C0A65
		transform rotate(-3deg)
		overflow hidden
		&:before
			position absolute
			z-index 1
			top 0
			left 0
			right 0
			bottom 0
			height 35px
			background url("../images/content/player-name-bg.png") calc(100% - 30px) calc(0% - 26px)/250px no-repeat
			transform rotate(0deg)
			content ""
			opacity 0.5


	&__name-last
		font-family $prEB
		text-transform uppercase
	&__scores
		margin-left -24px
		margin-right -31px
		// margin-right -26px
		font-size 0
		background #000
		white-space nowrap
		transform rotate(-3deg)
	&__scores-item
		margin-right 3px
		margin-left 3px
		width 25%
		display inline-block
		vertical-align top
		&:nth-child(3)
			width 22%
		&:last-child
			position relative
			width 22%
			.hbk-player__scores-body
				padding-right 0
				padding-left 0

	&__scores-body
		background #fff
		// min-height (128px / 2)
		height 75px
		font-family $postr
		font-weight normal
		font-size (154px / 2)
		text-align center
		color #000
	&__scores-val
		position relative
		top -17px
		line-height 1
	&__scores-bottom
		position relative
		padding-top 5px
		min-height (80px / 2)
		background #000
		font-family $prEL
		font-size (40px / 2)
		text-transform uppercase
		color #FFF
		text-align center
		&:after,
		&:before
			position absolute
			content ""
			top 0
			width 2px
			height 100%
			background #FFF
		&:after
			right -3px
		&:before
			left -3px
	&__bottom
		position relative
		margin-top -25px
		min-height 43px
		background url('../images/general/bottom.png') 100% 100% / 420px  no-repeat

	&__social
		position absolute
		bottom 0
		right 5px
		font-family $prESem
		font-size (30px / 2)
		text-align right
		color #FFF
		text-decoration none
		text-shadow 0 1px 2px rgba(0, 0, 0, 0.847175)
