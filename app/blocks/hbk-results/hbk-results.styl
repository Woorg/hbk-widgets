.hbk-results
	position relative
	display block
	width (1000px / 2)
	font-weight normal
	background #1F2833
	background linear-gradient(360deg, #1F2833 0%, #000000 100%)
	overflow hidden
	&:after,
	&:before
		position absolute
		z-index 0
		top 0
		left 0
		right 0
		bottom 0
		background url('../images/general/hbk-results-bg.png') 50% 0 / cover no-repeat
		opacity 0.2
		content ''
	&_near
		.hbk-results__title
			font-size (80px / 2)
	&__top
		position relative
		z-index 1
		margin-right 0
		margin-left 0
		margin-bottom 10px
		padding-top 16px
		padding-left 10px
		padding-right 10px
		white-space nowrap
		text-transform uppercase
	&__title
		color #FFF
		font-family $postr
		font-weight normal
		font-size (70px / 2)
		transform rotate(-6deg)
	&__date
		padding-right 36px
		font-family $prEL
		font-size (36px / 2 )
		font-weight normal
		color #CC1E2D
		text-align right
		transform rotate(-6deg)
	&__list
		position relative
		margin-bottom 20px
		padding-left 10px
		padding-right 10px
		text-align center
		z-index 1
	&__item
		display inline-block
		vertical-align top
		text-align center
		font-size 0
	&__team
		margin-bottom 25px
		position relative
		display inline-block
		vertical-align middle
		width (310px / 2)
		height (100px / 2)
		font-size (40px / 2)
		color #FFF
		transform rotate(-6deg)
		&:first-child
			.hbk-results__team-name
				text-align right
		&:last-child
			.hbk-results__team-icon-w
				left auto
				right -15px
			.hbk-results__team-name
				left 5px
				right auto
				text-align left
	&__team-icon-w
		position absolute
		top -10px
		left -15px
		bottom -15px
		// margin-top -5px
		// margin-bottom -5px
		// margin-left -15px
		padding 4px
		width ( 138px / 2 )
		height ( 138px / 2 )
		background linear-gradient(to top, #3e3d3d, #a4a4a4 26%, #525252 61%, #ffffff 74%, #b1b1b1)
		box-shadow 10px 10px 15px 0 rgba(0, 0, 0, 0.5), inset 5px 5px 15px 0 rgba(0, 0, 0, 0.5)
		border-radius 50%
	&__team-icon
		width 62px
		height 62px
		padding 2px
		background -10px 10px 15px rgba(0, 0, 0, 0.5), inset -5px 5px 15px rgba(0, 0, 0, 0.5)
		border-radius 50%
		overflow hidden
		transform rotate(6deg)
		img
			@extends .image
			border-radius 50%
	&__team-name
		position absolute
		top 5px
		right 5px
		max-width 90px
		white-space normal
		font-family $prER
		font-size (40px / 2)
		line-height 1
	&__val
		padding-left 20px
		padding-right 20px
		display inline-block
		vertical-align middle
		font-family $prEB
		font-size (80px / 2)
		color #FFF
		transform rotate(-6deg)
	&__bottom
		position relative
		min-height (90px / 2)
		background url('../images/general/bottom-third.png') 100% 100% / 500px  no-repeat
		color #FFF
	&__social
		position absolute
		top 8px
		left 120px
		font-size (30px / 2)
		font-family $prER
		font-weight normal
		color #FFF
		text-decoration none
		transform rotate(-6deg)

	&__logo
		position absolute
		bottom 0
		right 0
		retinaSprite($hbk_logo_second_group)
		hide-text()
